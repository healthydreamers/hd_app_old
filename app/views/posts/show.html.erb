<article class="baskerville pt6 pb5">
  <header class="avenir tc-l ph3 ph4-ns pt4 pt5-ns">
    <h1 class="f3 f2-m f-subheadline-l measure lh-title fw1 mt0"><%= @post.title %></h1>
    <time datetime="<%= @post.created_at %>"class="f5 f4-l db fw1 baskerville mb4">
      Added <%= time_ago_in_words @post.created_at %>
    </time>
    <img class="w-100 dib measure f3" src="http://mrmrs.io/photos/009.jpg" alt="A photo of sutro baths by Adam Morse"/>
  </header>
  <div class="ph3 ph4-m ph5-l">
    <div class="measure db center f5 f4-ns lh-copy">
      <p><%=h raw @post.body %></p>
      <hr>
      <h4 class="f6 ttu tracked gray link pointer dim">
        Source: <%= link_to @post.url, @post.url %>
      </h4>
    </div>
  </div>
</article>